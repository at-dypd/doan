        label for="polygonToggle"  Vẽ đa giác 
      li
        input#boxToggle name="type" onclick="toggleControl(this);" type="radio" value="box" /
        label for="boxToggle"  Vẽ hình chữ nhật
      li
        input#allowPanCheckbox checked="true" name="allow-pan" onclick="allowPan(this);" type="checkbox" value="allow-pan" /
        label for="allowPanCheckbox"  Cho phép kéo bản đồ khi vẽ
