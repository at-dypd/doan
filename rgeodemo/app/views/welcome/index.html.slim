    ul#controlToggle
      li
        input#noneToggle checked="checked" name="type" onclick="toggleControl(this);" type="radio" value="none" /
        label for="noneToggle"  Điều hướng
      li
        input#pointToggle name="type" onclick="toggleControl(this);" type="radio" value="point" /
        label for="pointToggle"  Vẽ điểm
      li
        input#lineToggle name="type" onclick="toggleControl(this);" type="radio" value="line" /
        label for="lineToggle"  Vẽ đường
